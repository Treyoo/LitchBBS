<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.litchi.bbs.dao.DiscussPostDAO">

    <sql id="table">discuss_post</sql>
    <sql id="insertFields">
        user_id, title, content, type, status, create_time, comment_count, score
    </sql>
    <sql id="selectFields">
        id, <include refid="insertFields"/>
    </sql>

    <select id="selectDiscussPosts" resultType="DiscussPost">
        select <include refid="selectFields"/>
        from <include refid="table"/>
        where status != 2
        <if test="userId!=0">
            and user_id = #{userId}
        </if>
        order by type desc, create_time desc
        limit #{offset}, #{limit}
    </select>

    <select id="getDiscussPostRows" resultType="int">
        select count(id)
        from <include refid="table"/>
        where status != 2
        <if test="userId!=0">
            and user_id = #{userId}
        </if>
    </select>

    <select id="selectById" resultType="DiscussPost">
        select <include refid="selectFields"/>
        from <include refid="table"/>
        where id=#{id}
    </select>

    <select id="selectLatestDiscussPosts" resultType="DiscussPost">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>
        <if test="userId != 0">
            WHERE user_id = #{userId}
        </if>
        ORDER BY id DESC
        LIMIT #{offset},#{limit}
    </select>

    <insert id="addDiscussPost" useGeneratedKeys="true" keyProperty="id">
        insert into <include refid="table"/>
        (<include refid="insertFields"/>) values
        (#{userId},#{title},#{content},#{type},#{status},
        #{createTime},#{commentCount},#{score})
    </insert>

    <update id="updateCommentCount">
        update <include refid="table"/>
        set comment_count=#{commentCount} where id=#{id}
    </update>

</mapper>